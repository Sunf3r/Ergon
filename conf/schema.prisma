generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int     @id @default(autoincrement())
  lid      String  @unique @db.VarChar()
  name     String? @db.VarChar()
  memories String? @db.VarChar()
  lang     String? @db.VarChar()
  prefix   String? @db.VarChar()
  cmds     Int?
}

model alarms {
  id     Int    @id @default(autoincrement())
  author Int
  chat   String @db.VarChar()
  msg    String @db.VarChar()
  time   String @db.VarChar()
  status Int    @default(0)
}

model msgs {
  author Int
  group  String @db.VarChar()
  count  Int    @default(1)

  @@id([author, group])
}

model BaileysAuthCreds {
  sessionId String @id
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BaileysAuthKey {
  sessionId String
  category  String
  keyId     String
  data      Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([sessionId, category, keyId])
  @@index([sessionId, category])
}