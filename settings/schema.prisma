generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id     String @id
  name   String @default("")
  lang   String
  prefix String
  cmds   Int    @default(0)
}

model msgs {
  author String
  group  String
  count  Int    @default(1)

  @@id([author, group])
}

model reminders {
  id       Int    @id @default(autoincrement())
  author   String
  chat     String
  msg      String
  remindAt String
}
